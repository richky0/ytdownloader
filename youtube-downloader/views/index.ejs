                                            <a href="/download/video?url=<%= encodeURIComponent(videoInfo.videoDetails.video_url) %>&fmt=<%= format.itag %>" 
                                               class="px-3 py-2 bg-green-600 hover:bg-green-700 text-white text-xs sm:text-sm rounded-lg transition-colors duration-200 text-center font-medium">
                                                <%= format.qualityLabel %><br><small><%= format.size %></small>
                                            </a>
                                        <% }); %>
                                    <% } else { %>
                                        <a href="/download/video?url=<%= encodeURIComponent(videoInfo.videoDetails.video_url) %>" 
                                           class="px-3 py-2 bg-green-600 hover:bg-green-700 text-white text-xs sm:text-sm rounded-lg transition-colors duration-200 text-center font-medium">
